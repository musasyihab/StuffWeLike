<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/article_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sample_item"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:background="@drawable/black_gradient_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/article_item_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Item 1 / 10"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/article_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="M-SMOOD14"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="A Great great item for SALE today only please grab it fast!"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>